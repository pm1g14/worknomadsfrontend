@page "/employees/{Id:int}/details"
@using AdminDashboard.Wasm.Models.Employee
@inject HttpClient Http

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Employee details</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTextField @bind-Value="employee.Id" Label="Id" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="employee.Name" Label="Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="employee.Surname" Label="Surname" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="employee.EmailAddress" Label="EmailAddress" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="employee.DateOfBirth" Label="DateOfBirth" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="employee.Nationality" Label="Nationality" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="employee.PlaceOfWork" Label="PlaceOfWork" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="employee.WalletAddress" Label="WalletAddress" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>

        <br/>
        <MudButton Variant="Variant.Filled" Color="Color.Success">Save Employee</MudButton>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public int Id { get; set; }

    private EmployeeDetails employee = new();

    protected override async Task OnInitializedAsync()
    {
        var companies = await Http.GetFromJsonAsync<List<EmployeeDetails>>("/employees/index");

        employee = companies.FirstOrDefault(x => x.Id == Id);
    }

}