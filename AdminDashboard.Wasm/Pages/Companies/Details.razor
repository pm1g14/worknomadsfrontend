@page "/companies/{Id:int}/details"
@using AdminDashboard.Wasm.Models.BusinessPartner
@inject HttpClient Http

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Company details</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTextField @bind-Value="company.Id" Label="Id" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="company.Name" Label="Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="company.Address" Label="Address" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="company.Email" Label="EmailAddress" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="company.ContactNumber" Label="Contact Number" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="company.WalletAddress" Label="WalletAddress" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>

        <br/>
        <MudButton Variant="Variant.Filled" Color="Color.Success">Save Company</MudButton>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public int Id { get; set; }

    private BusinessPartnerDetails company = new();

    protected override async Task OnInitializedAsync()
    {
        var companies = await Http.GetFromJsonAsync<List<BusinessPartnerDetails>>("/companies/index");

        company = companies.FirstOrDefault(x => x.Id == Id);
    }

}