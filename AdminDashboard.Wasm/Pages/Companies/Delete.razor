@page "/companies/{Id}/delete"
@using AdminDashboard.Wasm.Models.Company

<h3>Delete company</h3>

<form>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" @bind="company.Name" class="form-control" id="name">
    </div>

    <div class="form-group">
        <label for="inputAddress">Address</label>
        <input type="text" @bind="company.Address" class="form-control" id="inputAddress">
    </div>

    <div class="form-group">
        <label for="inputAddress2">Address 2</label>
        <input type="text" @bind="company.EmailAddress" class="form-control" id="inputAddress2">
    </div>

    <div class="form-group">
        <label for="employerWalletAddress">Employer wallet address</label>
        <input type="text" @bind="company.TelephoneNumber" class="form-control" id="employerWalletAddress">
    </div>

    <div class="form-group">
        <label for="employeeWalletAddress">Employee wallet address</label>
        <input type="text" @bind="company.WalletAddress" class="form-control" id="employeeWalletAddress">
    </div>

    <button type="submit" class="btn btn-primary">Save contract</button>
</form>

@code {

    [Parameter]
    public string Id { get; set; }

    private readonly CompanyDetails company = new();
}