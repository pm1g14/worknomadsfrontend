            private bool IsSuperAdmin()
            {
                if (AccountService?.User?.Role is null)
                {
                    return false;
                }

                return AccountService.User.Role == Role.SuperAdmin;
            }

            private bool IsAdmin()
            {
                if (AccountService?.User?.Role is null)
                {
                    return false;
                }

                return AccountService.User.Role > Role.User;
            } }